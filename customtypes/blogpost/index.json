{
  "id": "blogpost",
  "label": "BlogPost",
  "repeatable": true,
  "status": true,
  "format": "custom",
  "json": {
    "Post Content": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UUID",
          "placeholder": ""
        }
      },
      "name": {
        "type": "Text",
        "config": {
          "label": "Name",
          "placeholder": ""
        }
      },
      "header": {
        "type": "Text",
        "config": {
          "label": "Header",
          "placeholder": ""
        }
      },
      "datecreated": {
        "type": "Timestamp",
        "config": {
          "label": "DateCreated",
          "placeholder": ""
        }
      },
      "background": {
        "type": "Image",
        "config": {
          "label": "Background",
          "constraint": {
            "width": 4000,
            "height": 2000
          },
          "thumbnails": [
            {
              "name": "medium",
              "width": 2000,
              "height": 1000
            },
            {
              "name": "small",
              "width": 1000,
              "height": 500
            }
          ]
        }
      },
      "thumbnail": {
        "type": "Image",
        "config": {
          "label": "Thumbnail",
          "constraint": {
            "width": 800,
            "height": 200
          },
          "thumbnails": []
        }
      },
      "tags": {
        "type": "Text",
        "config": {
          "label": "Tags",
          "placeholder": "Tags separated with semicolon"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "blog_post_content": {
              "type": "SharedSlice"
            },
            "code_block": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": ""
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": ""
        }
      },
      "meta_author": {
        "type": "Text",
        "config": {
          "label": "Meta Author",
          "placeholder": ""
        }
      },
      "meta_keywords": {
        "type": "Text",
        "config": {
          "label": "Meta Keywords",
          "placeholder": ""
        }
      },
      "meta_robots": {
        "type": "Text",
        "config": {
          "label": "Meta Robots",
          "placeholder": ""
        }
      },
      "slices1": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "seo": {
              "type": "SharedSlice"
            }
          }
        }
      }
    }
  }
}
