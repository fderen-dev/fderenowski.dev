{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["simple-import-sort", "validate-jsx-nesting"],
  "rules": {
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error"
  },
  "overrides": [
    {
      "files": ["**/*.tsx", "**/*.ts"],
      "rules": {
        "simple-import-sort/imports": [
          "error",
          {
            "groups": [
              ["^react$", "^next", "^@", "^[a-z]"],
              ["^components"],
              ["^context", "^utils"],
              ["^\\./(?=.*/)(?!/?$)", "^\\.(?!/?$)", "^\\./?$"],
              ["^\\.\\.(?!/?$)", "^\\.\\./?$"],
              ["^public", "^assets"],
              ["^styles", "^.+\\.s?css$"]
            ]
          }
        ]
      }
    }
  ]
}
